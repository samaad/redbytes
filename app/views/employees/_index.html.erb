<% @employees.each do |employee| %>
  <tr id="tr_<%= employee.id %>">
    <td><%= employee.full_name %></td>
    <td><%= employee.age %></td>
	<td><%= employee.designation %></td>
    <td><%= employee.salary %></td>
	<td><%= employee.income_tax%></td>
	<td><%= employee.providend_fund%></td>
    <td><%= link_to 'Show', employee, :remote => true %></td>
    <td><%= link_to 'Edit', edit_employee_path(employee), :remote => true %></td>
    <td><%= link_to 'Destroy', employee, method: :delete, :remote => true, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

